generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      Status    @default(TODO)
  userId      String
  endDate     DateTime?
  startDate   DateTime?
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
